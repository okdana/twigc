  "license":     "MIT",

  "require": {
    "php":                 ">=7.2.5",
    "symfony/console":     "^5.0",
    "symfony/finder":      "^5.0",
    "twig/twig":           "^3.0",
    "ulrichsg/getopt-php": "^3.3"
  },

  "require-dev": {
    "phpunit/phpunit": "^6.5"
  },

  "autoload": {
    "psr-4": {"Dana\\Twigc\\": "src/Twigc"}
  },

  "bin": ["bin/twigc"]
}
